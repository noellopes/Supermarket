@model Supermarket.Models.Schedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduleId" />
            <div class="form-group mt-5">
                <label  class="control-label">Starting date</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group  mt-5">
                <label class="control-label">End date</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group  mt-5">
                <label  class="control-label">Daily starting hour</label>
                <input asp-for="DailyStartTime" class="form-control" />
                <span asp-validation-for="DailyStartTime" class="text-danger"></span>
            </div>
            <div class="form-group  mt-5">
                <label  class="control-label">Daily finish hour</label>
                <input asp-for="DailyFinishTime" class="form-control" />
                <span asp-validation-for="DailyFinishTime" class="text-danger"></span>
            </div>
            <div class="form-group  mt-5">
                <label class="control-label">Associated department</label>
                <select asp-for="DeptID" class="form-control" asp-items="ViewBag.IDDepartments"></select>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
