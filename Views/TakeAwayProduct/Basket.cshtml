@model Supermarket.Models.Basket

@{
    ViewData["Title"] = "Index";
}

<h1>Basket</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            var price = item.Price * item.QuantityReserved;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityReserved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => price)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Product Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalProductQuantityInBasket)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            Preparation Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstimatedPreparationTimeAsMinutes)
        </dd>
    </dl>
    <form asp-action="Submit">
        <input type="submit" value="Place Order" class="btn btn-danger" />
    </form>
</div>
