@model IEnumerable<Supermarket.Models.Shelft_ProductExhibition>

@{
    ViewData["Title"] = "Shelft Product Exhibition List";
}
<style>
    body {
        padding: 20px;
        background-color: #f8f9fa;
        color: #343a40;
    }

    h2 {
        color: #007bff;
        margin-top: 20px;
    }

    .card {
        background-color: #fff;
        border: 1px solid rgba(0, 0, 0, 0.125);
        border-radius: 0.25rem;
        padding: 20px;
        margin-bottom: 20px;
    }

    .table th,
    .table td {
        background-color: #f8f8f8;
        color: #000;
        border: none;
    }

    .btn-create {
        background-color: #28a745;
        color: #fff;
    }
</style>

<div class="card">
<h1>Shelft Product Exhibition List</h1>
</div>

<a  asp-action="Create"class="btn btn-create">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelf.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumQuantity)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-productId="@item.ProductId" asp-route-shelfId="@item.ShelfId">Edit</a> |
                    <a asp-action="Details" asp-route-productId="@item.ProductId" asp-route-shelfId="@item.ShelfId">Details</a> |
                    <a asp-action="Delete" asp-route-productId="@item.ProductId" asp-route-shelfId="@item.ShelfId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
