@model IEnumerable<Supermarket.Models.Shelft_ProductExhibition>

@{
    ViewData["Title"] = "Shelft Product Exhibition List";
}

<h1>Shelft Product Exhibition List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelf.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumQuantity)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-productId="@item.ProductId" asp-route-shelfId="@item.ShelfId">Edit</a> |
                    <a asp-action="Details" asp-route-productId="@item.ProductId" asp-route-shelfId="@item.ShelfId">Details</a> |
                    <a asp-action="Delete" asp-route-productId="@item.ProductId" asp-route-shelfId="@item.ShelfId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
