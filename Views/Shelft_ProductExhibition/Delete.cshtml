@model Supermarket.Models.Shelft_ProductExhibition

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        padding: 20px;
        background-color: #f8f9fa; /* Cor de fundo mais clara */
        color: #343a40; /* Cor do texto mais escura */
    }

    h1 {
        color: #007bff; /* Azul Bootstrap */
        margin-top: 20px; /* Margem superior maior */
    }

    .lead {
        font-size: 1.25rem; /* Tamanho de fonte maior */
        margin-bottom: 20px; /* Margem inferior maior */
    }

    .card {
        background-color: #fff; /* Cor de fundo do cartão */
        border: 1px solid rgba(0, 0, 0, 0.125); /* Borda do cartão */
        border-radius: 0.25rem; /* Borda arredondada */
        padding: 20px; /* Espaçamento interno do cartão */
        margin-bottom: 20px; /* Margem inferior do cartão */
    }

        .card table {
            width: 100%; /* Garante que a tabela ocupa 100% da largura do cartão */
            margin-bottom: 0; /* Remove a margem inferior da tabela */
        }

            .card table th,
            .card table td {
                padding: 12px; /* Adiciona um preenchimento adequado nas células da tabela */
                text-align: left; /* Alinha o texto à esquerda nas células */
            }
</style>

@if (ViewBag.Message != null)
{
 
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">Error</h4>
            <p>@ViewBag.Message</p>
            <a asp-controller="Shelves" asp-action="ShelfProducts" asp-route-shelfId="@Model.ShelfId" class="btn btn-secondary">Back to List</a>
        </div>
   
}
else
{
    <div class="card">
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>

        <div>
            <h4>Shelft Product Exhibition</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Shelf)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Shelf.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MinimumQuantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MinimumQuantity)
                </dd>
            </dl>
            @if (ViewBag.Message == null)
            {
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="ShelfId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    <a asp-controller="Shelves" asp-action="ShelfProducts" asp-route-shelfId="@ViewBag.ShelfId2" class="btn btn-secondary">Back to List</a>
                </form>
            }
        </div>
    </div>
}