@model Supermarket.Models.Tickets

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tickets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataEmissao" class="control-label"></label>
                <input asp-for="DataEmissao" class="form-control" />
                <span asp-validation-for="DataEmissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAtendimento" class="control-label"></label>
                <input asp-for="DataAtendimento" class="form-control" />
                <span asp-validation-for="DataAtendimento" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="NumeroDaSenha" class="control-label"></label>
                <input asp-for="NumeroDaSenha"  class="form-control"  />
                @* <input asp-for="NumeroDaSenha" value="@ViewBag.TicketCount" class="form-control" readonly />*@
                <span asp-validation-for="NumeroDaSenha" class="text-danger"></span>
            </div> 
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Prioritario" /> @Html.DisplayNameFor(model => model.Prioritario)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IDDepartments" class="control-label"></label>
                <input asp-for="IDDepartments" class="form-control" />
                <span asp-validation-for="IDDepartments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
