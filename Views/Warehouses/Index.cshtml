@model IEnumerable<Supermarket.Models.Warehouse>

@{
    ViewData["Title"] = "Warehouse";
}

<h1>Warehouse List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WarehouseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WarehouseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WarehouseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
