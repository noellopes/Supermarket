@model IEnumerable<Supermarket.Models.EmployeeEvaluation>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Evaluations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Employee_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradeNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Employee_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeEvaluationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeEvaluationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeEvaluationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
