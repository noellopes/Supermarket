@model EmployeeSchedulesViewModel

@{
    ViewData["Title"] = "IndexAdmin";
}


<h2>Filters</h2>

<div class="row">
    <div class="col-md-4">
        <form method="get" asp-action="IndexAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Employee</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" type="date" step="1" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" step="1" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h2 class="mt-3">Schedules</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Date</th>
            <th>Check in time</th>
            <th>Check out time</th>
            <th>Lunch time</th>
            <th>Lunch duration</th>
            @if (User.IsInRole("Gestor"))
            {
                <th>Edit</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EmployeeSchedules)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Employee.Employee_Name)</td>
                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.CheckInTime)</td>
                <td>@Html.DisplayFor(modelItem => item.CheckOutTime)</td>
                <td>@Html.DisplayFor(modelItem => item.LunchStartTime)</td>
                <td>@Html.DisplayFor(modelItem => item.LunchTime)</td>
                @if (User.IsInRole("Gestor"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeScheduleId">Edit</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="IndexAdmin" asp-route-page="1" asp-route-employeeId="@Model.EmployeeId" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">First</a>
        </li>
        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="IndexAdmin" asp-route-page="@(Model.PageIndex - 1)" asp-route-employeeId="@Model.EmployeeId" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">Previous</a>
        </li>
        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="IndexAdmin" asp-route-page="@(Model.PageIndex + 1)" asp-route-employeeId="@Model.EmployeeId" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">Next</a>
        </li>
        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-action="IndexAdmin" asp-route-page="@Model.TotalPages" asp-route-employeeId="@Model.EmployeeId" asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")">Last</a>
        </li>
    </ul>
</div>
<div>
    <a asp-action="HRHome">Back to Home</a>
</div>