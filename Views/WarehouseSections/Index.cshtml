@model IEnumerable<Supermarket.Models.WarehouseSection>

@{
    ViewData["Title"] = "Warehouse Section";
}

<h1>Warehouse Section List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warehouse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Warehouse.Adress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WarehouseSectionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WarehouseSectionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WarehouseSectionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
