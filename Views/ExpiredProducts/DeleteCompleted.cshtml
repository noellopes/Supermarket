@model Supermarket.Models.ExpiredProducts?

@{
    ViewData["Title"] = "Report Deleted";
}

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Success</h4>
    <p>The expired product report was successfully deleted!</p>
</div>

@if (Model != null)
{
    <h1>@ViewBag.Title</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FabricationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FabricationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExpirationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BarCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BarCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.Employee_Name)
            </dd>
        </dl>
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>
