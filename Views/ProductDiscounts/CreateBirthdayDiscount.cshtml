@model Supermarket.Models.ProductDiscount

<h2>Create Birthday Discounts</h2>

<form asp-action="CreateBirthdayDiscount" asp-controller="ProductDiscounts" method="post">
    <div class="form-group">
        <label asp-for="ProductId">Product Name</label>
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductList"></select>
    </div>

    <div class="form-group">
        <label asp-for="Value">Value</label>
        <input asp-for="Value" class="form-control" />
    </div>

    <input type="submit" value="Create Discount" class="btn btn-primary" />
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
