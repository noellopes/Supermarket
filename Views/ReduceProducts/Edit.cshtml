@model Supermarket.Models.ReduceProduct

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ReduceProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product!.Name), @Html.DisplayFor(model => model.Product!.Brand!.Name)
        </dd>
        @if (Model.WarehouseSection != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WarehouseSection)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WarehouseSection!.Description), @Html.DisplayFor(model => model.WarehouseSection!.Warehouse!.Name)
            </dd>
        }
        @if (Model.Shelf != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Shelf)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Shelf!.Name), @Html.DisplayFor(model => model.Shelf!.Hallway!.Description), @Html.DisplayFor(model => model.Shelf!.Hallway!.Store!.Name)
            </dd>
        }
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReduceProductId" />
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>  
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
