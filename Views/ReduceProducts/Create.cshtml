<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Select Where is the Product</label>
                <select id="selectWhere" class="form-control" onchange="test()">
                    <option value="1">Warehouse</option>
                    <option value="2">Store</option>
                </select>
            </div>

            <div class="form-group" >
                <label asp-for="WarehouseSectionId" class="control-label"></label>
                <select asp-for="WarehouseSectionId" id="Warehouse" class="form-control" asp-items="ViewBag.WarehouseSectionId" onChange="teste1"></select>
            </div>
            <div class="form-group" >
                <label asp-for="ShelfId" class="control-label"></label>
                <select asp-for="ShelfId" id="Store" disabled class="form-control" asp-items="ViewBag.ShelfId"></select>
            </div>

            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    function test() {
        var select1 = document.getElementById("Warehouse");
        var select2 = document.getElementById("Store");
        select1.disabled = !select1.disabled
