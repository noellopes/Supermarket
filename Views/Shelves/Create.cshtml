@model Supermarket.Models.Shelf

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Shelf</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @if (ViewBag.HallwaysId2 != null)
            {
                <input type="hidden" asp-for="HallwayId" />
                <div class="form-group">
                    <label asp-for="HallwayId" class="control-label"></label>
                    <select asp-for="HallwayId" class="form-control" readonly>
                        <option value="@ViewBag.HallwaysId2" selected>@ViewBag.HallwaysName</option>
                    </select>
                </div>

                
            }
            else
            {
                <div class="form-group">
                    <label asp-for="HallwayId" class="control-label"></label>
                    <select asp-for="HallwayId" class="form-control" asp-items="ViewBag.HallwayId"></select>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-route-hallwaysId="@ViewBag.HallwaysId2" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}