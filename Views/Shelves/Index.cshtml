@model IEnumerable<Supermarket.Models.Shelf>

@{
    ViewData["Title"] = "Shelf";
}

<h1>Shelf list</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hallway)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hallway.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShelfId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ShelfId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ShelfId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
