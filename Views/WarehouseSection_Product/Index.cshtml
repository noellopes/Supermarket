@model IEnumerable<Supermarket.Models.WarehouseSection_Product>

@{
    ViewData["Title"] = "Warehouse Section Product List";
}

<h1>Warehouse Section Product List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WarehouseSection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservedQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarehouseSection.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservedQuantity)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-productId="@item.ProductId" asp-route-warehouseSectionId="@item.WarehouseSectionId">Edit</a> |
                    <a asp-action="Details" asp-route-productId="@item.ProductId" asp-route-warehouseSectionId="@item.WarehouseSectionId">Details</a> |
                    <a asp-action="Delete" asp-route-productId="@item.ProductId" asp-route-warehouseSectionId="@item.WarehouseSectionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
