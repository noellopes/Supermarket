@model Supermarket.Models.WarehouseSection_Product

@{
    ViewData["Title"] = "Delete";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Error</h4>
        <p>@ViewBag.Message</p>
        <a asp-action="Index">Back to List</a>
    </div>
    
}
else
{
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
}
<div>
    <h4>Warehouse Section Product Info</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WarehouseSection)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WarehouseSection.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReservedQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservedQuantity)
        </dd>
    </dl>
    @if (ViewBag.Message == null){
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="WarehouseSectionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
    }
</div>

