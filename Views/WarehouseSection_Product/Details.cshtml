@model Supermarket.Models.WarehouseSection_Product

@{
    ViewData["Title"] = "WarehouseSection Product Details";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Success</h4>
        <p>@ViewBag.Message</p>
    </div>
}

<h1>Details</h1>

<div>
    <h4>Warehouse Section Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WarehouseSection)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WarehouseSection.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReservedQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReservedQuantity)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-ProductId="@Model.ProductId" asp-route-WarehouseSectionId="@Model.WarehouseSectionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
