@model PontoDateViewModel

@{
    ViewData["Title"] = "Index";
}
<style>
    .vermelho{
        color: red
    }
    .verde {
        color: green
    }
    .amarelo {
        color: darkgoldenrod
    }
</style>

<div class="d-flex flex-row-reverse justify-content-between">
    <form asp-action="RegistrarPonto">
        <div class="form-group">
            <input type="submit" value="Registrar Ponto" class="btn btn-primary" />
        </div>
    </form>
    <h1>
        Day Hours Balance: @if (!Model.PontoDia.DayBalancePositive)
        {
            <div class="vermelho d-inline">- @Model.PontoDia.DayBalance.ToString(@"hh\:mm")</div>
        }
        else
        {
            <div class="verde d-inline">@Model.PontoDia.DayBalance.ToString(@"hh\:mm")</div>
        }
    </h1>
</div>
<h6>Check in time -    @Model.PontoDia.CheckInTime</h6>
<h6>Lunch start time - @Model.PontoDia.LunchStartTime</h6>
<h6>Check end time -   @Model.PontoDia.LunchEndTime</h6>
<h6>Check out time -   @Model.PontoDia.CheckOutTime</h6>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Status</th>
            <th>Day Balance</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pontos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @switch (item.Status)
                    {
                        case "Registrado":
                            <div>Regular</div>
                            break;
                        case "Irregular":
                            <div class="amarelo">Irregular</div>
                            break;
                        case "Aprovado":
                            <div class="verde">Aprovado</div>
                            break;
                        case "Negado":
                            <div class="vermelho">Negado</div>
                            break;
                        default:
                            break;
                    }
                </td>
                <td>
                    @if (!Model.PontoDia.DayBalancePositive)
                    {
                        <text>-</text>
                    }@Model.PontoDia.DayBalance.ToString(@"hh\:mm")
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PontoId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>