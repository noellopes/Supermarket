@model IEnumerable<Supermarket.Models.Formation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Formation_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Formation_Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FormationId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.FormationId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.FormationId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
