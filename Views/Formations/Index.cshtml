@model IEnumerable<Supermarket.Models.Formation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <!-- Link para criar uma nova formação, visível apenas para usuários no papel de "Administrator" -->
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Formation_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Formation_Name)
                </td>
                <td>
                    <!-- Botões condicionais com base nos papéis do usuário -->
                    @if (User.IsInRole("Administrator"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.FormationId" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.FormationId" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.FormationId" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
