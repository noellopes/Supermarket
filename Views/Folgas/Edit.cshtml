@model Supermarket.Models.Folga

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Folga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="FolgaId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Id do Funcionário</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"><option value="">Selecione o seu nome</option></select>



            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="motivo" class="control-label"></label>
                <select asp-for="motivo" asp-items=" Html.GetEnumSelectList<Folga.Motivo>()" class="form-control"> <option value="">Selecione o Motivo</option></select>
                <span asp-validation-for="motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
