
@{
    ViewData["Title"] = "FolgasAprovadas";
}
@model List<Folga>
<h1>Folgas Aprovadas</h1>



@foreach (var folga in Model)
{
    
    {
        
    
    <div><h4>Folga de @folga.Employee.Employee_Name</h4>
        <p>Gestor:@folga.GestorId</p>
        <p>Aprovada a:@folga.DataResultado.ToString()</p>
        <p>Pedida a @folga.DataPedido.ToString()</p>
        <p>Início: @folga.DataInicio.ToShortDateString()</p>
        <p>Fim: @folga.DataFim.ToShortDateString()</p>
            <p>Motivo: @Html.DisplayFor(modelItem=>folga.motivo)</p>
        <br>
        <br>
        </div>
} 
}

<a asp-action="Index">Voltar ao Index</a>
