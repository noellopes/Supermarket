@model IEnumerable<Supermarket.Models.Folga>

@{
    ViewData["Title"] = "Index";
}

<h1>Folgas</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert_success" role="alert">@TempData["SuccessMessage"]</div>
}

<p>
    <a asp-action="Create">Criar Novo Pedido de Folga</a><br />
    <a asp-action="FolgasPendentes">Folgas Pendentes</a><br />
    <a asp-action="FolgasAprovadas">Folgas Aprovadas</a><br />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                GestorId
            </th>
            <th>
                Status 
            </th>
            <th>
                Data do Pedido 
            </th>
            <th>
                Data da Aprovação/Rejeição
            </th>
            <th>
                Data de Início
            </th>
            <th>
                Data de Fim
            </th>
            <th>
                Motivo
            </th>
            <th>
                Id do Funcionário
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GestorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataResultado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Employee_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FolgaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FolgaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.FolgaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="pagination">
    <nav aria-label=""><ul class="pagination">
        <li class="page-item"@(ViewData["PageIndex"].ToString()=="1"?"disabled":"")"">
            <a class="page-link" asp-action="Index"asp-route_page="1">1</a>
        </li>
        <li class="page-item"@(ViewData["PageIndex"].ToString()=="1"?"disabled":"")"">
            <a class="page-link" asp-action="Index" asp_route_page="@(int.Parse(ViewData["PageIndex"].ToString())-1)">Anterior</a>

        </li>
        <li class="page-item"@(ViewData["PageIndex"].ToString()==ViewData["TotalPages"].ToString()?"disabled":"")"">
            <a class="page-link" asp-action="Index" asp-route-page="@(int.Parse(ViewData["PageIndex"].ToString())+1)">Seguinte</a>
            </li>
            <li class="page-item"@(ViewData["PageIndex"].ToString()==ViewData["TotalPages"].ToString()?"disabled":"")"">
                <a class="page-link" asp-action="Index" asp-route-page="@ViewData["TotalPages"]">Última</a>
           </li>
    </ul></nav>
</div>