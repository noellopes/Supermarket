@model IEnumerable<Supermarket.Models.Folga>

@{
    ViewData["Title"] = "Index";
}

<h1>Folgas</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert_success" role="alert">@TempData["SuccessMessage"]</div>
}

<p>
    <a asp-action="Create">Criar Novo Pedido de Folga</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                GestorId
            </th>
            <th>
                Status 
            </th>
            <th>
                Data do Pedido 
            </th>
            <th>
                Data da Aprovação/Rejeição
            </th>
            <th>
                Data de Início
            </th>
            <th>
                Data de Fim
            </th>
            <th>
                Motivo
            </th>
            <th>
                Id do Funcionário
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GestorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataResultado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Employee_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FolgaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FolgaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.FolgaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
