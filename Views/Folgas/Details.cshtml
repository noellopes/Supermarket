@model Supermarket.Models.Folga

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da Folga</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Gestor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gestor)
        </dd>
        <dt class = "col-sm-2">
           Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Data do Pedido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPedido)
        </dd>
        <dt class = "col-sm-2">
            Data de Início
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class = "col-sm-2">
           Data de Fim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class = "col-sm-2">
           Motivo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Motivo)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Alterar" asp-route-id="@Model?.FolgaId">Alterar</a> |
    <a asp-action="Index">Voltar</a>
</div>
