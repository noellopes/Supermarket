@model Supermarket.Models.Departments

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Departments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Departments" />
            <div class="form-group">
                <label asp-for="Name_Departments" class="control-label"></label>
                <input asp-for="Name_Departments" class="form-control" />
                <span asp-validation-for="Name_Departments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description_Departments" class="control-label"></label>
                <input asp-for="Description_Departments" class="form-control" />
                <span asp-validation-for="Description_Departments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleID" class="control-label"></label>
                <select asp-for="ScheduleID" class="form-control" asp-items="ViewBag.ScheduleID"></select>
                <span asp-validation-for="ScheduleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
