                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" class ="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>
            <div class="form-group">
                <label asp-for="IssueRegisterDate" class="control-label"></label>
                <input asp-for="IssueRegisterDate" class="form-control" />
                <span asp-validation-for="IssueRegisterDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Severity" class="control-label"></label>
                <select asp-for="Severity" class="form-control"></select>
                <span asp-validation-for="Severity" class="text-danger"></span>
