@model HierarquiasModel

@{
    ViewData["Title"] = "Deletar Hierarquia";
}

<h2>Deletar Hierarquia</h2>

<p>Tem certeza de que deseja deletar este Hierarquia?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.HierarquiaId</dd>

        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.HierarquiaNome</dd>

        <dt class="col-sm-2">Nivel:</dt>
        <dd class="col-sm-10">@Model.NivelHierarquico</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="HierarquiaId" />
    <button type="submit" class="btn btn-danger">Deletar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
