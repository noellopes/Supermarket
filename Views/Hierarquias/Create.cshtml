@model HierarquiasModel

@{
    ViewData["Title"] = "Criar Hierarquias";
}

<h2>Criar Nova Hierarquia</h2>

<form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="HierarquiaNome">Nome:</label>
            <input asp-for="HierarquiaNome" class="form-control" />
            <span asp-validation-for="HierarquiaNome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NivelHierarquico">Nível de Hierarquia:</label>
            <input asp-for="NivelHierarquico" class="form-control" />
            <span asp-validation-for="NivelHierarquico" class="text-danger"></span>
        </div>
    <p></p>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
