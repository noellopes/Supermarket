@model List<Supermarket.Models.Hierarquias>

@{
    ViewData["Title"] = "Resultado da Pesquisa de Superiores";
}

<h2>Resultado da Pesquisa de Superiores</h2>

@if (Model.Count > 0)
{
    <h5>Superiores de <b>@ViewData["SuperiorNome"]:</b></h5>
    <table class="table">
        <thead>
            <tr>
                <th>Superiores</th>
                <th>Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hierarquia in Model)
            {
                <tr>
                    <td>@hierarquia.Superiores.Employee_Name</td>
                    <td><a asp-action="Details" asp-route-id="@hierarquia.Id" class="btn btn-info">Detalhes</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum superior encontrado para o subordinado selecionado.</p>
}

<a asp-action="Index" class="btn btn-primary">Voltar</a>
