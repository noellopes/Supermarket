@model IEnumerable<Supermarket.Models.IssueType>

@{
    ViewData["Title"] = "Index";
}

<h1>Issue Types</h1>

<p>
    @if (User.IsInRole("Create_Edit_Del_IssueType"))
    {
        <div class="d-grid gap-2">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    }
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueDescription)
            </td>
            <td>

                    @if (User.IsInRole("Create_Edit_Del_IssueType"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.IssueTypeId">Edit  </a>
                        <a asp-action="Details" asp-route-id="@item.IssueTypeId">Details  </a>
                        <a asp-action="Delete" asp-route-id="@item.IssueTypeId">Delete</a>

                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.IssueTypeId">Details  </a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
