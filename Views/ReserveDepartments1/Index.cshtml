@model IEnumerable<Supermarket.Models.ReserveDepartment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reserve)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDeFunc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Reserve.ReserveId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Employee_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeFunc)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReserveId" class="btn btn-primary">Edit</a>
